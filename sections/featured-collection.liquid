<div class="container">

<h1 class="text-center flex-col items-center my-8 text-3xl font-bold ">
    {{section.settings.title}}
</h1>
    <div class="glider">
        {% for product in section.settings.featured_collection.products limit: 8 %}
            {% render 'product-card', product: product %}
    {% endfor %}
    </div>
      
</div>
<script>
    new Glider(document.querySelector(".glider"), {
	slidesToShow: 4,
	dots: "#dots",
	draggable: true,
	arrows: {
		prev: ".glider-prev",
		next: ".glider-next",
	},
});
</script>

{% schema %}
    {
        "name":"Featured Collection",
        "settings":[
            {
                "type":"text",
                "id":"title",
                "default":"Featured Collection",
                "label":"Title"
            },
            {
                "type":"collection",
                "id":"featured_collection",
                "label":"Collection"
            }
            
        ]
    }
{% endschema %} 